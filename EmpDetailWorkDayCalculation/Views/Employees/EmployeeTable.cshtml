@model IEnumerable<Employees>



<h1 class="mb-4">Employees List</h1>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th hidden>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Job Position</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @(Model.Any()){
        @foreach (var employee in Model)
        {
            <tr>
                <td hidden>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.Email</td>
                <td>@employee.JobPosition</td>
                <td>
                    <button onclick="editEmployee(@employee.Id)" class="btn btn-primary btn-sm">
                        <i class="fa fa-edit"></i> Edit
                    </button>
                    <button href="javascript:void(0);" onclick="deleteEmployee(@employee.Id)" class="btn btn-danger btn-sm">
                        <i class="fa fa-trash"></i> Delete
                    </button>
                </td>
            </tr>
        }
        }
       
    </tbody>
</table>


